<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:text="로그인"
        android:textSize="35dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:text="이메일"
        android:textSize="23dp" />
    <EditText
        android:id="@+id/login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="email"
        android:layout_marginHorizontal="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="23dp"
        android:text="비밀번호"
        android:textSize="23dp" />
    <EditText
        android:id="@+id/login_password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:layout_marginHorizontal="20dp" />
    <Button
        android:id="@+id/login_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="로그인"
        android:textSize="18dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <Button
            android:id="@+id/findId_btn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="아이디 찾기"
            android:textSize="18dp" />
        <Button
            android:id="@+id/findpw_btn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="비밀번호 찾기"
            android:textSize="18dp" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:text="소셜 로그인"
        android:textSize="18dp"
        android:textStyle="bold" />
    <ImageButton
        android:id="@+id/login_google"
        android:layout_width="700px"
        android:layout_height="160px"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:background="@drawable/google_login" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageButton
            android:id="@+id/login_kakao"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:background="@drawable/kakao" />
        <ImageButton
            android:id="@+id/login_naver"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:background="@drawable/naver" />
    </LinearLayout>
</LinearLayout>