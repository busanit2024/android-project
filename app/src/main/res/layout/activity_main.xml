<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.busanit.searchrestroom.activity.MainActivity">

  <include
      android:id="@+id/search_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="12dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      layout="@layout/search_bar"/>

  <com.google.android.gms.maps.MapView
      android:id="@+id/mapView"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toBottomOf="@id/search_bar"
      app:layout_constraintBottom_toTopOf="@id/bottomNavigation"/>

  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/fab_my_location"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:clickable="true"
      android:src="@drawable/icon_location"
      android:elevation="6dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="16dp"
      app:fabSize="mini"/>

  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/fab_register_location"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:clickable="true"
      android:focusable="true"
      android:src="@drawable/icon_add"
      android:elevation="6dp"
      app:fabSize="mini"
      app:layout_constraintBottom_toTopOf="@id/fab_my_location"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="16dp"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
      android:background="@color/white"
      android:paddingHorizontal="32dp"
      android:paddingTop="36dp"
      android:paddingBottom="48dp"
      android:orientation="vertical"
      app:layout_constraintBottom_toTopOf="@id/bottomNavigation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:text="상세검색"
          android:textSize="20dp"
          android:textStyle="bold"
          android:layout_weight="1"
          android:layout_marginBottom="24dp"/>
      <ImageView
          android:id="@+id/menuCollapseButton"
          android:layout_width="32dp"
          android:layout_height="32dp"
          android:src="@drawable/icon_down"
          app:tint="@android:color/secondary_text_light"/>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/searchRadiusGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="검색 반경"
          android:textStyle="bold"
          android:textSize="16dp"
          android:layout_marginEnd="38dp"/>
      <RadioButton
          android:id="@+id/searchRadius200"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="200m"
          android:layout_marginEnd="32dp"/>
      <RadioButton
          android:id="@+id/searchRadius500"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="500m"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="남여공용"
          android:textStyle="bold"
          android:textSize="16dp"
          android:layout_marginEnd="32dp"/>
      <CheckBox
          android:id="@+id/checkUnisexFalse"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:labelFor="@+id/checkUnisexFalse"
          android:text="분리"
          android:layout_marginEnd="16dp"/>
      <CheckBox
          android:id="@+id/checkUnisexTrue"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:labelFor="@+id/checkUnisexTrue"
          android:text="공용"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="편의시설"
          android:textStyle="bold"
          android:textSize="16dp"
          android:layout_marginEnd="32dp"/>
      <CheckBox
          android:id="@+id/checkDiaper"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:labelFor="@+id/checkUnisexFalse"
          android:text="기저귀 교환대"
          android:layout_marginEnd="16dp"/>
      <CheckBox
          android:id="@+id/checkAccessible"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:labelFor="@+id/checkUnisexTrue"
          android:text="장애인용"/>
    </LinearLayout>
  </LinearLayout>

  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/bottomNavigation"
      android:layout_width="match_parent"
      android:layout_height="64dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:menu="@menu/menu_bottom_nav"
      app:labelVisibilityMode="labeled"
      android:background="@color/white"
      app:itemTextColor="@color/black"
      app:itemIconTint="@android:color/secondary_text_light"/>

</androidx.constraintlayout.widget.ConstraintLayout>